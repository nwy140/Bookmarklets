javascript:(function(){
  var url = window.location.href;
  if (url.startsWith("file:///D:/")) {
    var newUrl = url.replace("file:///D:/", "file:///Volumes/V/");
    navigator.clipboard.writeText(newUrl).then(function() {
      //alert("Copied Windows path: " + newUrl);
    }, function() {
      //alert("Failed to copy new URL");
    });
  } else {
    //alert("This is not a /Volumes/V/ path");
  }
})();

