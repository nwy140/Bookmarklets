// for copying local video browser video timestamps

javascript: (function() {
  var timestamp = document.querySelector('video').currentTime;
  var videoUrl = window.location.href.split('#')[0];  // Removes existing '#t=...' if any
  var timestampUrl = videoUrl + "#t=" + Math.floor(timestamp);
  navigator.clipboard.writeText(timestampUrl).then(function() {
  }, function() {
  });
})();



